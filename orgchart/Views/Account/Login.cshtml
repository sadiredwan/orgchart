@model orgchart.Models.LoginUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    @{ 
        String message = ViewData["message"].ToString();

    }
   @if (message != "")
   {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        @Html.Raw(message)
    </div>
   }

  @using (Html.BeginForm("LoginStore", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(), FormMethod.Post, new { id = "form", data_toggle = "validator", enctype = "multipart/form-data" }))
  {

        <div class="form-group has-feedback">
            <input type="email" name="email" value="@Model.email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" name="password" value="@Model.password" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
  }
    <a href="@Url.Action("register","account")" class="text-center">Register a new membership</a>
</div>

